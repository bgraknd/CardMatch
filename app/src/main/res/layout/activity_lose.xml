<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBrainExpBack"
        tools:context=".LoseActivity">

    <pl.droidsonroids.gif.GifTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/explodingbrain"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/gifTextView" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"/>
    <TextView
            android:text="Kaybettin!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="36sp"
            android:textColor="@color/colorBrainExpFront" tools:layout_editor_absoluteY="473dp"
            tools:layout_editor_absoluteX="126dp"/>
    <Button
            android:text="Ana Sayfaya Don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bttnAnaSayfa"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="130dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="130dp" android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>